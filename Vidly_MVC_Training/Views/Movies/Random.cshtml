@model IEnumerable<Vidly_MVC_Training.Models.Movie>

@{
    ViewBag.Title = "Random";
}

<h2>Random</h2>

@Html.ActionLink("Add Movie","New","Movies",null,new { @class = "btn bt-primary" })

@if(Model.Count() == 0)
{
    <text>there is no movies yet.</text>
}
else
{
    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(@item.Name,"Edit","Movies",new { id = item.Id },null)</td>
                <td>@item.Genre.Name</td>
            </tr>
        }
    </table>
}




