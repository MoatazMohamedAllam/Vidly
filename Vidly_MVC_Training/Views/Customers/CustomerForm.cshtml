@model Vidly_MVC_Training.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
}

<h2>Create</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c =>c.Customer.Name, new { @class="form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, "{0:d MMM yyyy}" ,new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MemberShipTypeId)
        @Html.DropDownListFor(c => c.Customer.MemberShipTypeId,new SelectList(Model.MemberShipTypes,"Id","Name"), "--Select--" , new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewLetter) Subscribed To NewsLetters
        </label>
    </div>


    @Html.HiddenFor(c => c.Customer.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Create</button>
}

